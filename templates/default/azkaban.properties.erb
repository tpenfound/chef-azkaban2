#Azkaban Personalization Settings
azkaban.name=<%= @node[:azkaban][:name] %>
azkaban.label=<%= @node[:azkaban][:label] %>
azkaban.color=<%= @node[:azkaban][:color] %>
web.resource.dir=web/
default.timezone.id=America/Los_Angeles

#Azkaban UserManager class
user.manager.class=<%= @node[:azkaban][:user_manager][:class] %>
user.manager.xml.file=conf/azkaban-users.xml

#Loader for projects
executor.global.properties=conf/global.properties
azkaban.project.dir=projects

database.type=mysql
mysql.port=3306
mysql.host=<%= @mysql_host %>
mysql.database=<%= @node[:azkaban][:mysql][:database] %>
mysql.user=<%= @node[:azkaban][:mysql][:user] %>
mysql.password=<%= @node[:azkaban][:mysql][:password] %>
mysql.numconnections=100

# Velocity dev mode
velocity.dev.mode=false

# Azkaban Jetty server properties. Ignored in tomcat
jetty.maxThreads=<%= @node[:azkaban][:jetty][:max_threads] %>
jetty.ssl.port=<%= @node[:azkaban][:jetty][:ssl_port] %>
jetty.port=8081
jetty.keystore=<%= @node[:azkaban][:keystore][:name] %>
jetty.password=<%= @node[:azkaban][:keystore][:password] %>
jetty.keypassword=<%= @node[:azkaban][:keystore][:key_password] %>
jetty.truststore=<%= @node[:azkaban][:truststore][:name] %>
jetty.trustpassword=<%= @node[:azkaban][:truststore][:password] %>

# Azkaban Executor settings
executor.maxThreads=50
executor.port=12321
#executor.shared.token=abcdefg
executor.flow.threads=30

# mail settings
mail.sender=
mail.host=
job.failure.email=
job.success.email=